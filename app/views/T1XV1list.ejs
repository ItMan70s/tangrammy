	</div><% function getF3(val) { 
  var opts = ""; 
  val = "," + (val || "") + ","; 
  if (val.contains( "," + "0" + ",")) {    opts += " "; } 
   if (val.contains( "," + "1" + ",")) {    opts += "<span class='orange'><img class='icon15' src='/img/s/f4.png' alt='Medium' title='Medium'> </span> "; } 
   if (val.contains( "," + "2" + ",")) {    opts += "<span class='red'><img class='icon15' src='/img/s/f5.png' alt='High' title='High'> </span> "; } 
   return opts; } %>
<% function getF2(val) { 
  var opts = ""; 
  val = "," + (val || "") + ","; 
  if (val.contains( "," + "0" + ",")) {    opts += "<span class='blue'><img class='icon15' src='/img/s/b1.png' alt='Initial' title='Initial'> </span> "; } 
   if (val.contains( "," + "1" + ",")) {    opts += "<span class='green'><img class='icon15' src='/img/s/b2.png' alt='In progress' title='In progress'> </span> "; } 
   if (val.contains( "," + "2" + ",")) {    opts += "<span class='orange'></span> "; } 
   if (val.contains( "," + "3" + ",")) {    opts += "<span class='black'></span> "; } 
   return opts; } %>
